{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFilesAfterEnv": ["<rootDir>/setup-tests.ts"],
  "moduleNameMapper": {
    "^db/(.*)": "<rootDir>/db/$1",
    "^src/(.*)": "<rootDir>/src/$1"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "test/coverage"
}
